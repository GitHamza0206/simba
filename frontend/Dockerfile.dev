# Development stage
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Expose port 5173 (Vite's default dev server port)
EXPOSE 5173

# Start development server with host set to allow external connections
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]